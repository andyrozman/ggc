<?xml version="1.0" ?>
<project name="GNU Gluco Control" default="build" basedir=".">
    <description>
        Build file for GGC
    </description>

    <!-- Environment properties read from a file ...-->
    <property file="../../build/AtechTools.properties"/>
    <property file="./GGCBuild.properties"/>
    <property file="./GGC_Core_Version.properties"/>
    

    <!-- These should *not* be modified on the command line! -->
    <property name="build.dir" value="${outdir.dir}/classes"/>
    <property name="deploy.dir" value="${outdir.dir}/deploy"/>
    
    
    <!-- Build GGC  -->
    
    <target name="build">
        <echo message="   ************************************************* "/>
        <echo message="   ****              GGC Core Build               **** "/>
        <echo message="   ************************************************* "/>
        <echo message=""/>
        <echo message="     update_help_dev = updates file containg help (for dev purposes)"/>
        <echo message=""/>
    </target>


    <!-- Public targets -->
        
    <target name="update_help_dev" description="Updates Help Files used for Development">

        <jar jarfile="ggc_help-0.1.jar"
             update="false" 
             index="false"
             >

            <fileset dir="../data/">
                <exclude name=".svn/**"/>
            </fileset>

        </jar>
    
   
        <copy file="ggc_help-0.1.jar" todir="../src/" overwrite="true" />

        <copy file="ggc_help-0.1.jar" todir="../../GGC Desktop/bin" overwrite="true" />
    	
    	
    </target>
	
	
	
	






 



    <target name="jar_core"  description="Build GGC Core" >
        <jar jarfile="${binary.dir}/ggc-core-${ggc-core.version}.jar"
             update="false" 
             index="false"
             >

            <fileset dir="${build.dir}">
                <include name="ggc/core/**"/>
                <include name="ggc/shared/**"/>
                <include name="*.hbm.xml"/>
                <exclude name="ggc/gui/**"/>
            </fileset>
            <fileset dir="${source.dir}">
                <include name="*.hbm.xml"/>
            </fileset>

        </jar>
    </target>








	
    <target name="deploy" >
        <copy file="${binary.dir}/ggc-core-${ggc-core.version}.jar" todir="../../build/deploy_files/"/>
        <copy file="${binary.dir}/ggc-lang-${ggc-lang.version}.jar" todir="../../build/deploy_files/"/>
    </target>
	
   



</project>

