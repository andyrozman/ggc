<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    
    <!-- ***************** GGC::Nutrition SCHEMA  ******************* -->


    <!--  Nutrition Definition - Global -->
    <class name="ggc.db.hibernate.NutritionDefinitionH" table="nutrition_definition">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>           
        <property name="weight_unit" type="string"  length="50" />
        <property name="tag" type="string" length="50" />
        <property name="name" type="string" length="100" />
        <property name="decimal_places" type="text" length="10" />
    </class>

    <!--  Nutrition Home Weight Type - Global -->
    <class name="ggc.db.hibernate.NutritionHomeWeightTypeH" table="nutrition_home_weight_type">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>           
        <property name="name" type="string" length="255"  />
    </class>



    <!--  Food Group - Nutrition 1 -->
    <class name="ggc.db.hibernate.FoodGroupH" table="nutrition_food_group">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>            
        <property name="description" type="string" length="60" />
        <property name="description_i18n" type="string" length="60" />
    </class>


    <!--  Food Description - - Nutrition 1-->
    <class name="ggc.db.hibernate.FoodDescriptionH" table="nutrition_food_description">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>           
        <property name="food_group_id" type="long"  />
        <property name="name" type="string" length="200" />
        <property name="i18n_name" type="string" length="60" />
        <property name="refuse" type="float" />
        <property name="nutritions" type="text" />
        <property name="home_weights" type="text" />
    </class>


    <!--  Food Group - Nutrition 2 -->
    <class name="ggc.db.hibernate.FoodUserGroupH" table="nut_user_food_group">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>            
        <property name="description" type="string" length="60" />
        <property name="description_i18n" type="string" length="60" />
        <property name="parent_id" type="long"  />
    </class>


    <!--  Food Description - - Nutrition 2-->
    <class name="ggc.db.hibernate.FoodUserDescriptionH" table="nut_user_food_description">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>           
        <property name="food_user_group_id" type="long"  />
        <property name="name" type="string" length="200" />
        <property name="i18n_name" type="string" length="60" />
        <property name="refuse" type="float" />
        <property name="nutritions" type="text" />
        <property name="home_weights" type="text" />
    </class>





    <!--  Food Description -->
<!--    <class name="ggc.db.hibernate.FoodHomeWeightH" table="nutrition_food_home_weight">
        <id name="id" type="long" unsaved-value="0">
            <generator class="native"/>
        </id>           
        <property name="food_number" type="long"  />
        <property name="sequence" type="int" not-null="true" />
        <property name="amount" type="float"  />
        <property name="msr_desc" type="string" length="2000" />
        <property name="weight_g" type="float" />
    </class>
-->



    <class name="ggc.db.hibernate.MealGroupH" table="meals_group">
        <id name="id" type="long" unsaved-value="0">
            <generator class="assigned"/>
        </id>            
        <property name="name" type="string" length="255" />
        <property name="name_18n" type="string" length="255" />
        <property name="parent_id" type="int"  />  
    </class>

    <class name="ggc.db.hibernate.MealH" table="meals_meal">
        <id name="id" type="long" unsaved-value="0">
            <generator class="assigned"/>
        </id>            
        <property name="meal_group_id" type="long"  />  
        <property name="type" type="int"  />  <!-- 1=Nutrition USDBA, 2=Nutrition User -->
        <property name="food_id" type="long"  />  <!-- 1=Nutrition USDBA, 2=Nutrition User -->
    </class>


</hibernate-mapping>
