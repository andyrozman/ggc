    <class name="ggc.db.hibernate.MealGroupH" table="meal_group">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>           
        <property name="name" type="string" length="60" />
        <property name="name_i18n" type="string" length="60" />
        <property name="description" type="string" length="255" />
        <property name="parent_id" type="long" />
    </class>

    <class name="ggc.db.hibernate.MealH" table="meal_meal">
        <id name="id" type="long" unsaved-value="0">
            <generator class="org.hibernate.id.AssignedIncrementGenerator"/>
        </id>           
        <property name="group_id" type="long"  />
        <property name="name" type="string" length="60" />
        <property name="name_i18n" type="string" length="60" />
        <property name="description" type="string" length="255" />
        <property name="parts" type="text" />  <!--  1:x=1.0;2:y;1:z   -->
                                                                     <!--  type:id     type=[1=Nutrition USDBA, 2=Nutrition User ]; id = id in db -->
        <property name="nutritions" column="values" type="text" />
        <property name="extended" type="text" />
        <property name="comment" type="string" length="2000" />
    </class>

